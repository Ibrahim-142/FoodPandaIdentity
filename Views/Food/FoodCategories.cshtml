<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Customer View</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #fff7f9;
            background-size: cover;
            min-height: 100vh;
        }

        .btn-custom {
            background-color: #e6005c;
            color: white !important;
            border: none;
        }

    </style>
</head>
<body >
    @{
        Layout = "UserLayout";
    }
    <div class="container w-50 min-vh-100 d-flex flex-column align-items-center justify-content-center p-4">
        <h3 class="rounded-5 w-100 p-3 text-center  mb-5" style="background-color: #e6005c;color:white;font-weight:bold;">
            Please Select the type of food that you want
        </h3>
        <div class="row w-50 text-start">
            <div class="col-12 mb-5">
                <a href=@Url.Action("FastFood", "Food")>  <button class=" btn-custom text-white rounded-5 w-100 p-3 border-0 text-center">1.Fast Food</button></a>
            </div>
            <div class="col-12 mb-5">
                <a href=@Url.Action("Breakfast", "Food")>  <button class="btn-custom text-white rounded-5 w-100 p-3 border-0 text-center">2. Breakfast</button></a>
            </div>
            <div class="col-12">
                <a href=@Url.Action("DesiFood", "Food")>  <button class="btn-custom text-white rounded-5 w-100 p-3 border-0 text-center">3.Desi Food</button></a>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>