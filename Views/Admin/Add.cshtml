@{
    Layout = "AdminLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Food Item</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #fff7f9;
        }

        .form-card {
            background-color: #ffffff;
            border-radius: 1.5rem;
            padding: 2rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 500px;
        }

        h3, h4 {
            color: #e6005c;
            font-weight: bold;
        }

        .form-label {
            font-weight: 500;
        }

        .btn-custom {
            background-color: #e6005c;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #b80048;
            }
    </style>
</head>
<body>

    <div class="container-fluid d-flex flex-column align-items-center justify-content-center min-vh-100">
        <h3 class="mb-4 text-center">Welcome Admin</h3>

        <form method="post" asp-action="AddProduct" asp-controller="Admin" class="form-card">
            <h4 class="text-center mb-4">Add Food Item</h4>

            <div class="mb-3">
                <label class="form-label">Item Name</label>
                <input type="text" class="form-control" name="name" placeholder="e.g. Cheeseburger" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Category (e.g. Fast Food, Drinks)</label>
                <input type="text" class="form-control" name="category" placeholder="e.g. Fast Food" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Price ($)</label>
                <input type="number" step="0.01" class="form-control" name="price" placeholder="e.g. 9.99" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" name="description" placeholder="Short item description" required>
            </div>

            <div class="mb-4">
                <label class="form-label">Image URL</label>
                <input type="text" class="form-control" name="imageUrl" placeholder="http://example.com/image.jpg" required>
            </div>

            <button type="submit" class="btn btn-custom w-100">Add Food Item</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
