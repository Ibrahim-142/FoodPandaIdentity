@{
    Layout = "AdminLayout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Food Item</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #fff7f9;
        }

        .form-card {
            background-color: #ffffff;
            border-radius: 1.5rem;
            padding: 2rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 500px;
        }

        h3 {
            color: #e6005c;
            font-weight: bold;
        }

        .form-label {
            font-weight: 500;
        }

        .btn-danger-custom {
            background-color: #dc3545;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-danger-custom:hover {
                background-color: #b02a37;
            }
    </style>
</head>

<body>

    <div class="container-fluid d-flex flex-column align-items-center justify-content-center min-vh-100">
        <h3 class="mb-4 text-center">Welcome Admin</h3>

        <form method="post" action="/Admin/DeleteProduct" class="form-card">
            <h4 class="text-center mb-4 text-danger">Delete Food Item</h4>

            <div class="mb-3">
                <label for="primaryKey" class="form-label">Enter Product ID</label>
                <input type="text" name="primaryKey" id="primaryKey" class="form-control" placeholder="e.g. 102" required>
            </div>

            <button type="submit" class="btn btn-danger-custom w-100">Delete Item</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
