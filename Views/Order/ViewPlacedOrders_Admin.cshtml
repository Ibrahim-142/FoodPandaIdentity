@model List<FoodPandaIdentity.Models.PlacedOrders>

@{
    Layout = "AdminLayout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - Order History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f5f5f5;
            min-height: 100vh;
        }

        .history-card {
            background-color: #ffffffee;
            border-radius: 1rem;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .history-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
            }

        .history-header {
            font-weight: 600;
            color: #c1121f;
        }

        .order-detail {
            font-size: 1rem;
            color: #444;
        }

        .total-bill {
            font-weight: 600;
            color: #a20030;
        }

        h1, h5 {
            color: #222;
        }
    </style>
</head>

<body>
    <div class="container py-5">
        <h1 class="text-center mb-3">All Placed Orders</h1>
        <h5 class="text-center text-muted mb-5">Admin, here are all recent customer orders:</h5>

        @if (Model == null || !Model.Any())
        {
            <div class="text-center text-secondary fs-5">No orders have been placed yet.</div>
        }
        else
        {
            <div class="row justify-content-center g-4">
                @foreach (var order in Model)
                {
                    <div class="col-md-6 col-lg-4 d-flex align-items-stretch">
                        <div class="card history-card p-3 w-100">
                            <div class="card-body">
                                <h5 class="card-title history-header">Item: @order.Name</h5>
                                <p class="order-detail mb-2">Quantity: @order.Quantity</p>
                                <p class="total-bill">Total Bill: $@order.TotalBill</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
